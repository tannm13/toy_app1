<li id="entry-<%= entry.id %>">
  <%= link_to gravatar_for(entry.user), entry.user %>
  <span class="user"><%= link_to entry.title, entry %></span>
  <span class="content">
  	<%= truncate(entry.content, length: 100) %>
  </span>
  <span class="timestamp">
  	Posted <%= time_ago_in_words(entry.created_at) %> ago.
  	<% if current_user?(entry.user) %>
      <%= link_to "edit", edit_entry_path(entry) %> | 
  		<%= link_to "delete", entry, method: :delete, data: { confirm: "Are you sure?"} %>
  	<% end %>
  </span>
</li>